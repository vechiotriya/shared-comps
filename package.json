{
  "name": "@your-scope/shared-comps",
  "version": "1.0.0",
  "description": "Shared Tamagui components for Next.js and React Native",
  "main": "dist/cjs/index.js",
  "module": "dist/esm/index.js",
  "react-native": "src/index.ts",
  "types": "dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "react-native": "./src/index.ts",
      "types": "./dist/types/index.d.ts"
    }
  },
  "files": ["dist", "src"],
  "scripts": {
    "clean": "rimraf dist",
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "react-native": "*",
    "react-native-web": "*",
    "tamagui": "^1.136.1"
  },
  "devDependencies": {
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "rimraf": "^6.0.0",
    "@types/react": "^19.2.2"
  }
}