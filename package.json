{
  "name": "shared-comps",
  "version": "0.1.0",
  "description": "Common UI components built with Tamagui core for React Native and Next.js applications",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",

  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": ["dist","package.json","README.md","LICENSE","src"],
  "scripts": {
    "build": "tsup && tsc --emitDeclarationOnly --declaration --declarationMap false",
    "clean": "rimraf dist"
  },

  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "@tamagui/core": "*",
    "@tamagui/web": "*",
    "tamagui": "*",
    "react-native": "*",
    "react-native-web": "*"
  },

  "peerDependenciesMeta": {
    "react-native-web": { "optional": true }
  },

  "devDependencies": {
    "@types/react": "^19.0.0",
    "typescript": "^5.3.0",
    "tsup": "^8.0.0",
    "rimraf": "^6.1.0",
    "@tamagui/core": "^1.136.9",
    "@tamagui/web": "^1.136.9",
    "tamagui": "^1.136.9"
  }
}