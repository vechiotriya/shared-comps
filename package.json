{
  "name": "shared-comps",
  "version": "1.0.0",
  "description": "Shared Tamagui components for React Native and Next.js",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "src"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",
    "prepare": "pnpm run build",
    "clean": "rimraf dist"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "react-native": "*",
    "react-native-web": ">=0.18.0",
    "tamagui": "^1.136.1"
  },
  "devDependencies": {
    "@types/react": "^18.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.4.0"
  },
  "license": "MIT",
  "dependencies": {
    "rimraf": "^6.1.0"
  }
}
